<div class="row">
    <div class="col-12 col-md-6 m-auto">
        <form class="form mt-20" data-form="form_login" data-valid="js" data-action="check_login_form" validator>
            <div class="form__header">Вход:</div>
            <div class="form__body">

                <div class="form-group">
                    <label for="login_email">Email адрес:</label>
                    <input name="email" data-type="email" type="email" class="form-control" id="login_email"
                           aria-describedby="emailHelp" placeholder="Введите email" required>
                    <small data-error-element="email" class="form-text text-muted" style="display: none;">Текст ошибки
                    </small>
                </div>

                <div class="form-group">
                    <label for="login_password">Пароль:</label>
                    <input name="password" data-type="password" type="password" autocomplete="off" class="form-control" id="login_password"
                           placeholder=" Введите пароль" required>
                    <small data-error-element="password" class="form-text text-muted" style="display: none;">Текст
                        ошибки
                    </small>
                </div>

                <!--            <div class="form-group form-check">-->
                <!--                <input type="checkbox" class="form-check-input" id="exampleCheck1">-->
                <!--                <label class="form-check-label" for="exampleCheck1">Запомнить</label>-->
                <!--            </div>-->

                <div data-context="errors">

                </div>

                <button type="submit" class="btn btn-info">Войти</button>
            </div>
            <div class="form__loader" style="display: none;">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </form>
    </div>
</div>
